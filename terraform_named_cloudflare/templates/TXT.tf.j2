{%- for record in records -%}
resource "cloudflare_record" "{{ records[record].name.strip('.').replace('.', '_').replace('*', 'star') }}-TXT" {
  name    = "{{ record }}"
  ttl     = {{ records[record].ttl }}
  type    = "TXT"
  value   = "{{ records[record].value }}"
  zone_id = var.cloudflare_zone_id
}

{% endfor -%}