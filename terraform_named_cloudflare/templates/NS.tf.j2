{%- for resource in resources -%}
resource "cloudflare_record" "{{ resource }}NS" {
  name    = "{{ resources[resource].name }}"
  ttl     = {{ resources[resource].ttl }}
  type    = "NS"
  NS1  = "{{ resources[resource].value1 }}"
  NS2  = "{{ resources[resource].value2 }}"
  NS3  = "{{ resources[resource].value3 }}"
  NS4  = "{{ resources[resource].value4 }}"
  zone_id = var.cloudflare_zone_id
}

{% endfor -%}